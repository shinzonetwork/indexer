# Shinzo Network Indexer Environment Variables Template
# Copy this file to .env and fill in your actual values
# These variables override the config.yaml settings

# =============================================================================
# Managed Blockchain Node Configuration
# =============================================================================
# Get these values from your GCP Console > Blockchain Node Engine
GCP_GETH_RPC_URL=https://json-rpc.YOUR_PROJECT.blockchainnodeengine.com
GCP_GETH_WS_URL=wss://ws.YOUR_PROJECT.blockchainnodeengine.com
GCP_GETH_API_KEY=your-gcp-api-key-here

# =============================================================================
# DefraDB Configuration
# =============================================================================
# Leave DEFRADB_URL empty to use embedded DefraDB
# Set to external URL if using separate DefraDB instance
DEFRADB_URL=
# DEFRADB_URL=http://localhost:9181

# Encryption secret for DefraDB keyring (generate a secure random string)
DEFRADB_KEYRING_SECRET=your-secure-keyring-secret-here

# DefraDB playground (true/false) - disable in production
DEFRADB_PLAYGROUND=true

# DefraDB P2P networking (true/false)
DEFRADB_P2P_ENABLED=false
DEFRADB_P2P_LISTEN_ADDR=/ip4/127.0.0.1/tcp/9171

# DefraDB storage path
DEFRADB_STORE_PATH=./.defra

# =============================================================================
# Indexer Configuration  
# =============================================================================
# Starting block height for indexing
# Ethereum Mainnet recent blocks: ~19000000+
# For testing, use lower values
INDEXER_START_HEIGHT=23000000

# =============================================================================
# Logging Configuration
# =============================================================================
# Enable debug logging (true/false)
LOGGER_DEBUG=true

